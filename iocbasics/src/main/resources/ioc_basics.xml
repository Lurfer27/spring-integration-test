<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="constructor-setup"
          class="com.yodel.model.BasicPOJO">
        <constructor-arg name="name" value="red"/>
        <constructor-arg name="color" value="violet"/>
    </bean>

    <bean id="no-args"
          class="com.yodel.model.BasicPOJO">
        <property name="name" value="Mario"/>
        <property name="color" ref="defaultColor"/>
    </bean>

    <bean id="defaultColor"
          class="com.yodel.model.ColorEnum"
          factory-method="valueOf">
        <constructor-arg value="blue"/>
    </bean>

    <bean id="colorRandomizer"
          class="com.yodel.controller.ColorRandomizer"/>

    <!-- Gets a random color, same every time -->
    <bean id="randomColorAlwaysTheSame"
          factory-bean="colorRandomizer"
          factory-method="randomColor"
          scope="singleton"/>

    <!-- Gets a random color, different every time -->
    <bean id="randomColorAlwaysDifferent"
          factory-bean="colorRandomizer"
          factory-method="randomColor"
          scope="prototype"/>

    <!-- Gets any color, except the random color defined above -->
    <bean id="exclusiveColor"
          factory-bean="colorRandomizer"
          factory-method="exceptColor">
        <constructor-arg ref="randomColorAlwaysTheSame"/>
    </bean>
</beans>