<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="basicPOJO"
          class="com.yodel.model.BasicPOJO">
        <property name="name" value="basicPOJOName"/>
        <property name="loggingColorRandomizer" ref="loggingColorRandomizer"/>
    </bean>

    <bean id="loggingColorRandomizer"
          class="com.yodel.model.LoggingColorRandomizer"
          destroy-method="destroy"
          init-method="init">
        <property name="logFile" ref="colorLogFile"/>
    </bean>

    <bean id="colorLogFile"
          class="java.io.File">
        <constructor-arg value="colorLog.txt"/>
    </bean>
</beans>